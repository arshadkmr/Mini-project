<%-include('../layouts/adminHeader.ejs') %>
<div class="content-wrapper">
  <div class="container">
    <div class="container-fluid">
      <div class="mt-3 mb-0 pb-2">
        <div class="table-responsive">
          <h2 class="mb-3" style="text-align: center; color: white;">Coupon List</h2>
          <table class="table" style=" text-align: center; color: white;">
            <tr>
              <th>No</th>
              <th>Items</th>
              <th>Type</th>
              <th>Discount</th>
              <th>Action</th>
            </tr>
            <tr>
              <% if(coupon.length> 0){
                                    for(let i=0;i<coupon.length;i++){ %>
            <tr>
              <td>
                <%=i+1%>
              </td>
              <td>
                <%=coupon[i].name%>
              </td>
              <td>
                <%=coupon[i].type%>
              </td>
              <td>
                <%=coupon[i].discount%>
              </td>
              <td>
                <%if(coupon[i].isAvailable===0){%>
                <button type="button" class="btn"><a href="/admin/show-coupon?id=<%=coupon[i]._id%>" style="color: rgb(255, 255, 255); text-decoration: none;" class="btn btn-outline-success show">Show</a></button>
                <%}else{%>
                <button type="button" class="btn "><a href="/admin/block-coupon?id=<%=coupon[i]._id%>" style="color: rgb(255, 255, 255); text-decoration: none; " class="btn btn-outline-danger delete "> Hide </a></button>
                <%}%>
                                </td>
                            </tr>
                            <% } }else{ %>
            <tr>
              <td colspan="5">Coupon not found</td>
            </tr>
            <% } %>
            </tr>
          </table>
          <a href="/admin/addcoupon" class="btn btn-light btn-round px-5 mb-2">Add Coupon</a>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../layouts/adminFooter.ejs') %>